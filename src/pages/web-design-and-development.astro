---
import BaseLayout from '../layouts/Layout.astro'
import Header from '../sections/webDev/Header/index.astro'
import NotABusinessCard from '../sections/webDev/NotABusinessCard/index.astro';
import SpeedForPhones from '../sections/webDev/SpeedForPhones/index.astro'
import EffortlessToUpdate from '../sections/webDev/EffortlessToUpdate/index.astro'
import SellSection from '../sections/webDev/SellSection/index.astro'
---

<BaseLayout title="Charleston Web Design and Developement">
  <div class="view-container">
    <Header />
    <NotABusinessCard />
    <SpeedForPhones />
    <EffortlessToUpdate />
    <SellSection />
  </div>
</BaseLayout>

<style lang="scss">
  .view-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 120px;
    justify-items: center;
    width: 100%;
    overflow: hidden;

    @media (min-width: 600px) {
      gap: 160px;
    }

    @media (min-width: 1100px) {
      gap: 200px;
    }
  }
</style>