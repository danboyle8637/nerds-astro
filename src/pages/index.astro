---
import BaseLayout from '../layouts/Layout.astro'
import Header from '../sections/home/Header/index.astro'

import PerspectiveGradient from '../components/typography/PerspectiveGradient.astro';
import TerminalHeader from '../components/typography/TerminalHeader.astro';
import Month from '../components/calendar/NormalMonth.astro'

import { AppIcon } from '../components/spline/AppIcon/index'
---
<BaseLayout title="Page title">
	<div class="view-container">
		<AppIcon client:load />
	</div>
</BaseLayout>

<style>
	.view-container {
		padding: 0 12px;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #111721;
		width: 100vw;
		height: 100vh;
	}

	.month-container {
		display: grid;
		grid-template-columns: 1fr;
		grid-auto-rows: min-content; 
		gap: 4px;
		justify-items: end;
		width: 100%;
		/* perspective: 400px; */
	}

	/* @media (min-width: 600px) {
		.month-container {
			width: 600px;
			perspective: 600px;
		}
	} */
</style>