---
import BaseLayout from '../layouts/Layout.astro'
import Header from '../sections/sevenDaySite/Header/index.astro'
import LeadSection from '../sections/sevenDaySite/LeadSection/index.astro'
---

<BaseLayout title="7 Day Site">
  <div class="view-container">
    <Header />
    <LeadSection />
  </div>
</BaseLayout>

<style lang="scss">
  .view-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 120px;
    justify-items: center;
    width: 100%;
    overflow: hidden;

    @media (min-width: 600px) {
      gap: 160px;
    }

    @media (min-width: 1100px) {
      gap: 200px;
    }
  }
</style>