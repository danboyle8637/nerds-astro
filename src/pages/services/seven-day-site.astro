<style lang="scss">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .view-container {
    @include baseColGrid;
    gap: 120px;
    justify-items: center;
    width: 100%;
    overflow: hidden;

    @include aboveMobile {
      gap: 160px;
    }

    @include aboveIpadPro {
      gap: 200px;
    }
  }
