---
const mobileCodingIcons = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/coding-icon-background-600x900_UaMc7EPbS.png?ik-sdk-version=javascript-1.4.3"

const aboveMobileCodingIcons = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/coding-icon-background-800x500_O0qox5xsI.png?ik-sdk-version=javascript-1.4.3"

const tsIcon = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/typescript-icon_cWrqhDbxz.png?ik-sdk-version=javascript-1.4.3"

const htmlIcon = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/html-icon_Xv8AEsff0.png?ik-sdk-version=javascript-1.4.3"

const cssIcon = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/css-icon_05b4xlg7c.png?ik-sdk-version=javascript-1.4.3"
---

<div class="container">
  <div class="coding-wrapper">
    <picture class="bg-icons">
      <source srcset={aboveMobileCodingIcons} media="(min-width: 600px)">
      <img src={mobileCodingIcons} alt="Other technology icons" title="Our Coding Technologies">
    </picture>
    <img class="ts-icon" src={tsIcon} alt="Typescript Icon">
    <img class="html-icon" src={htmlIcon} alt="HTML5 Icon">
    <img class="css-icon" src={cssIcon} alt="CSS Icon">
  </div>
  <div class="galaxy-blue"></div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    position: relative;
    padding: 120px 0 40px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(-180deg, var(--background-color-dark), #0C1118);
    width: 100%;
    overflow: hidden;

    @include aboveMobile {
      padding: 140px 0 0 0;
    }

    @include aboveIpadPro {
      
    }
  }

  .coding-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    width: 100%;
    max-width: 1000px;
  }

  .bg-icons {
    grid-column: 1 / 1;
    grid-row: 1 / -1;
    justify-self: end;
    align-self: end;
    width: 100%;

    img {
      width: 100%;
    }

    @include aboveIpadPro {
      transform: translate(100px, 40px);
    }
   }

  .ts-icon {
    grid-column: 1 / 1;
    grid-row: 1 / -1;
    width: 140px;
    transform: translate(40px, -20px);
    z-index: 1;
 
    @include aboveIphone11 {
      width: 160px;
    }

    @include aboveMobile {
      justify-self: center;
      transform: translate(-140px, -60px);
    } 

    @include aboveTablet {
      width: 200px;
    }
  }

  .html-icon {
    grid-column: 1 / 1;
    grid-row: 1 / -1;
    width: 120px;
    justify-self: end;
    align-self: center;
    transform: translate(-60px, -40px);
    z-index: 1;

    @include aboveIphone11 {
      width: 140px;
    }

    @include aboveMobile {
      justify-self: center;
      transform: translate(80px, -40px);
    }

    @include aboveTablet {
      width: 160px;
    }
  }

  .css-icon {
    grid-column: 1 / 1;
    grid-row: 1 / -1;
    align-self: end;
    width: 100px;
    transform: translate(60px, -120px);
    z-index: 1;

    @include aboveIphone11 {
      width: 120px;
    }

    @include aboveMobile {
      align-self: center;
      transform: translate(80px, 0px);
    }

    @include aboveTablet {
      width: 150px;
      transform: translate(140px, 0px);
    }
  }

  .galaxy-blue {
    position: absolute;
    right: 0;
    bottom: 0;
    background-color: #000;
    border-radius: 50%;
    width: 180px;
    height: 180px;
    filter: blur(200px);
    transform: translate(-80px, 0);
    z-index: 1;

    @include aboveMobile {
      transform: translate(-80px, 40px);
    }

    @include aboveTablet {
      width: 300px;
      transform: translate(0, 100px);
    }
  }
</style>