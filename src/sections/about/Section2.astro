---
import { Content } from '../../data/about/section2.mdx'
---

<div class="container">
  <div class="about-container">
    <Content />
  </div>
</div>

<style lang="scss">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .container {
    padding: 80px 0 0 0;

    @include aboveTablet {
      padding: 120px 0 0 0;
    }
  }

  .about-container {
    padding: 0 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    justify-items: start;
    width: 100%;

    @include aboveMobile {
      width: 660px;
    }

    @include aboveTablet {
      width: 800px;
    }
  }
</style>