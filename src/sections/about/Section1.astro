---
import { Content } from '../../data/about/section1.mdx'


---

<div class="about-container">
  <Content />
</div>


<style lang="scss">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .section-container {
    @include baseColGrid;
    gap: 0;
    justify-items: center;
    width: 100%;

    @include aboveTablet {
      width: 800px;
    }
  }

  .about-container {
    padding: 80px 12px 0 12px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;

    @include aboveMobile {
      padding: 80px 0 0 0;
      width: 660px;
    }
  
    @include aboveTablet {
      padding: 120px 0 0 0;
    }
  }

  .coding-wrapper {
    position: relative;
    background-image: url("https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/coding-icon-background-600x900_UaMc7EPbS.png?ik-sdk-version=javascript-1.4.3");
    background-image: url("https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/coding-icon-background-600x900_UaMc7EPbS.png?ik-sdk-version=javascript-1.4.3"), linear-gradient( var(--background-color), var(--background-color-dark));
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 0 100%;
    width: 100%;
    height: 600px;

    @include aboveIphone11 {
      height: 680px;
    }

    @include aboveMobile {
      background-image: url("https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/coding-icon-background-800x500_O0qox5xsI.png?ik-sdk-version=javascript-1.4.3");
      height: 500px;
    }
  }

  .bg-icons {
    width: 100%;
  }

  .ts-icon {
    position: absolute;
    top: 60px;
    left: 40px;
    width: 140px;
    z-index: 1;
 
    @include aboveIphone11 {
      width: 160px;
    }

    @include aboveMobile {
      left: 50%;
      transform: translateX(-100%);
    }
  }

  .html-icon {
    position: absolute;
    top: 200px;
    right: 50px;
    width: 120px;
    z-index: 1;

    @include aboveIphone11 {
      width: 140px;
    }

    @include aboveMobile {
      top: unset;
      bottom: 40px;
    }
  }

  .css-icon {
    position: absolute;
    bottom: 140px;
    left: 70px;
    width: 100px;
    z-index: 1;

    @include aboveIphone11 {
      width: 120px;
    }
  }
</style>