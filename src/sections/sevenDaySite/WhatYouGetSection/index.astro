---
import BaseBullet from "../../../components/typography/BaseBullet.astro";

const bullets: string[] = [
  "Home page (the main sales page)",
  "About page (backup the offer you're making)",
  "Contact page (not the main lead form)",
  "Or we can change things up."
]
---

<div class="container">
  <h1>Here's What You Get:</h1>
  <div class="bullet-container">
    {bullets.map(bullet => <BaseBullet>{bullet}</BaseBullet>)}
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    padding: 0 24px;
    @include baseColGrid;
    gap: 60px;
    justify-items: start;
    width: 100%;

    @include aboveMobile {
      width: 600px;
    }

    @include aboveTablet {
      width: 720px;
    }
  }

  h1 {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 6px;
    justify-items: end;
    font-size: 4rem;
    font-weight: 700;

    @include aboveTablet {
      font-size: 6rem;
    }
  }

  .bullet-container {
    @include baseColGrid;
    gap: 40px;
    width: 100%;

    @include aboveTablet {
      gap: 60px;
    }
  }
</style>