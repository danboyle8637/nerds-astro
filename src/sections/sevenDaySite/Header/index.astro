---
import Headline from './Headline.astro';
import Month from '../../../components/calendar/NormalMonth.astro'
import InternalNavButton from '../../../components/buttons/InternalNavButton.astro';
---

<div class="view-container">
	<div class="content-container">
		<div class="headline-container">
			<Headline />
			<div class="month-container">
				<Month timelineInDays={7} />
			</div>
		</div>
		<InternalNavButton type="teal" title="Free Nerd Chat" slug="/" width={290}>Schedule a Nerd Chat</InternalNavButton>
	</div>
</div>

<style lang="scss">
	@import "../../../styles/sizes.scss";

	.view-container {
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: var(--background-color-dark);
		width: 100%;
		box-shadow: 0 4px 18px 1px hsla(0, 0%, 0%, 0.4);
	}

	.content-container {
		padding: 40px 12px 80px 12px;
		display: grid;
		grid-template-columns: 1fr;
		grid-auto-rows: min-content; 
		gap: 80px;
		justify-items: center;
		width: 100%;

		@include aboveIphone11 {
			gap: 120px;
		}

		@include aboveTablet {
			padding: 80px 0 120px 0;
		}

		@include aboveIpadPro {
			width: 1100px;
		}
	}

	.month-container {
		width: 100%;
		perspective: 1000px;

		@include aboveMobile {
			width: 500px;
		}

		@include aboveTablet {
			transform: translate(0, 60px);
		}
	}

	.headline-container {
		display: grid;
		grid-template-columns: 1fr;
		grid-auto-rows: min-content; 
		gap: 4px;
		justify-items: center;
		width: 100%;

		@include aboveTablet {
			grid-template-columns: 1fr 1fr;
		}

		@include aboveIpadPro {
			gap: 40px;
		}
	}

	@media (min-width: 600px) {
	}
</style>