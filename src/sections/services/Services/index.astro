---
import TerminalHeader from "../../../components/typography/TerminalHeader.astro";
import CardsContainer from "./CardsContainer.astro";
import MiddleLeftAccent from "../../../components/accents/MiddleLeftAccent.astro";
---

<div class="container">
  <div class="content-container">
    <div class="header">
      <TerminalHeader cursor={true}>
        <h3>~ Services</h3>
      </TerminalHeader>
    </div>
    <CardsContainer />
  </div>
  <div class="galaxy top-galaxy"></div>
  <MiddleLeftAccent backgroundType="body" />
  <div class="galaxy bottom-galaxy"></div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    position: relative;
    display: flex;
    justify-content: center;
    width: 100%;
    overflow: hidden;
  }

  .content-container {
    padding: 80px 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 90px;
    justify-items: start;
    width: 100%;
    max-width: 1000px;
    isolation: isolate;

    @include aboveMobile {
      padding: 80px 26px 120px 26px;
    }

    @include aboveTablet {
      padding: 120px 36px 120px 36px;
    }

    @include aboveIpadPro {
      padding: 120px 0 120px 0;
    }
  }
 
  .header {
    width: 100%;
    max-width: 600px;
  }

  h3 {
    text-transform: uppercase;
    @media (min-width: 600px) {
      font-size: 6rem;
    }
  }

  .galaxy {
    background-color: #3D00BD;
    border-radius: 50%;
    width: 220px;
    height: 220px;
    filter: blur(160px);
    z-index: -1;

    @media (min-width: 960px) {
      width: 400px;
      height: 400px;
      filter: blur(260px);
     
    }
  }

  .top-galaxy {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(80px, -60px);

    @include aboveMobile {
      transform: translate(60px, -20px);
    }

    @include aboveIpadPro {
      transform: translate(60px, -220px);
    }
  }

  .bottom-galaxy {
    position: absolute;
    bottom: 0;
    right: 0;
    transform: translate(80px, 80px);

    @include aboveTablet {
      transform: translate(180px, 120px);
    }
   }
</style>

