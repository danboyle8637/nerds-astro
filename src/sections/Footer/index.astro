---
import Logo from "../../components/navigation/Logo.astro";
import AdminLinkBlock from "./AdminLinkBlock.astro";
import ServiceLinkBlock from "./ServiceLinkBlock.astro";
import { footerWebDevLinks, footerCopyLinks, footerBlogLinks } from '../../data/navigation'
import TopRightAccent from "../../components/accents/TopRightAccent.astro";
import BottomLeftAccent from "../../components/accents/BottomLeftAccent.astro";
import MiddleRightAccent from "../../components/accents/MiddleRightAccent.astro";
---

<footer>
  <div class="header">
    <Logo />
  </div>
  <div class="link-blocks-container">
    <AdminLinkBlock />
    <ServiceLinkBlock links={footerWebDevLinks} />
    <ServiceLinkBlock links={footerCopyLinks} />
    <ServiceLinkBlock links={footerBlogLinks} />
  </div>
  <TopRightAccent backgroundType="footer" />
  <BottomLeftAccent backgroundType="footer" />
  <div class="accent">
    <MiddleRightAccent backgroundType="footer" />
  </div>
</footer>

<style lang="scss">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  footer {
    position: relative;
    padding: 20px 12px 80px 12px;
    background-color: var(--footer-background);
    @include baseColGrid;
    gap: 80px;
    justify-items: center;
    width: 100%;
    box-shadow: 0 0 0 8px hsla(0, 0%, 0%, 0.4);
    overflow: hidden;
    isolation: isolate;

    @include aboveMobile {
      padding: 40px 12px 80px 12px;
      gap: 120px;
    }

    @include aboveTablet {
      padding: 40px 40px 80px 40px;
    }
  }

  .header {
    display: grid;
    grid-template-columns: 140px 1fr;
    width: 100%;
    z-index: 2;
  }

  .accent {
    @include aboveMobile {
      display: none;
    }
   }

  .link-blocks-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 120px;
    justify-items: start;
    width: max-content;

    @include aboveMobile {
      grid-template-columns: 1fr 1fr;
    }

    @include aboveIpadPro {
      grid-template-columns: repeat(4, 1fr);
      gap: 90px;
    }
  }
</style>