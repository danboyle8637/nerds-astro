---
import PuctuationBullet from "../../../components/typography/PuctuationBullet.astro";

const bullets = [
  "Do you want to write blog posts and get FREE SEO traffic?",
  "Do you need to create events or add new products every week?",
  "We can make your website easy to update and manage yourself.",
]
---

<div class="container">
  <ul>
    {bullets.map((bullet) => <PuctuationBullet type="question">{bullet}</PuctuationBullet>)}
  </ul>
  
</div>

<style lang="scss">
  .container {
    order: 1;
    padding: 0 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 80px;
    justify-items: start;
    width: 100%;

    @media (min-width: 600px) {
      width: 660px;
    }

    @media (min-width: 960px) {
      order: 0;
      width: auto;
    }
  }

  ul  {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 80px;
    width: 100%;
  }
</style>