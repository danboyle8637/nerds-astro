---
import Headline from "./Headline.astro";
import CopyBlock from "./CopyBlock.astro";
---

<div class="container">
  <Headline />
  <CopyBlock />
</div>

<style lang="scss">
  .container {
    padding: 120px 0 0 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: center;
    width: 100%;

    @media (min-width: 600px) {
      gap: 120px;
    }
  }
</style>