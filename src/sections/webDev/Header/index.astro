---
import Headline from "./Headline.astro";
import { AppIcon } from '../../../components/spline/AppIcon'
import InternalNavButton from "../../../components/buttons/InternalNavButton.astro";
---

<div class="container">
  <div class="content-container">
    <Headline />
    <div class="model">
      <AppIcon client:load />
    </div>
    <InternalNavButton type="purple" title="Free Nerd Chat" slug="/" width={290}>Free Nerd Chat</InternalNavButton>
  </div>
</div>

<style lang="scss">
  .container {
    display: flex;
    align-items: center;
    background-color: #161E2D;
    width: 100%;
    box-shadow: 0 4px 18px 1px hsla(0, 0%, 0%, 0.4);
    overflow: hidden;
  }

  .content-container {
    padding: 60px 0 80px 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: center;
    width: 100%;
  }

  .model {
    width: 300px;
  }
</style>