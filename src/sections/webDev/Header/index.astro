---
import Headline from "./Headline.astro";
import { AppIcon } from '../../../components/solid/AppIcon'
import InternalNavButton from "../../../components/buttons/InternalNavButton.astro";
---

<div class="container">
  <div class="content-container">
    <Headline />
    <div class="model">
      <AppIcon client:load />
    </div>
  </div>
    <InternalNavButton type="purple" title="Free Nerd Chat" slug="/" width={290}>Schedule a Nerd Chat</InternalNavButton>
</div>

<style lang="scss">
  .container {
    padding: 60px 0 80px 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 20px;
    justify-items: center;
    background-color: #161E2D;
    width: 100%;
    box-shadow: 0 4px 18px 1px hsla(0, 0%, 0%, 0.4);
    overflow: hidden;

    @media (min-width: 600px) {
      padding: 60px 0 80px 34px;
      gap: 60px;
    }

    @media (min-width: 1100px) {
      padding: 60px 0 80px 0;
    }
  }

  .content-container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: center;
    width: 100%;
    max-width: 1000px;

    @media (min-width: 600px) {
      grid-template-columns: 1fr 1fr;
      align-items: center;
      gap: 0;
    }

   
  }

  .model {
    width: 300px;
  }
</style>