---
import BestSalesToolHeadline from "./BestSalesToolHeadline.astro";
import InternalNavButton from "../../../components/buttons/InternalNavButton.astro";

const mobileImageUrl =
  "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/traffic-leads-sales-mobile_aU5MQZt4g.png?ik-sdk-version=javascript-1.4.3";

const aboveMobileImageUrl =
  "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/website-sales-tool-1320-720_q9_8A3RZz.png?ik-sdk-version=javascript-1.4.3";
---

<div class="container">
  <div class="content-container">
    <BestSalesToolHeadline />
    <p>Hide The Nerdy Tech Stuff and Give You What You Want...</p>
  </div>
  <picture>
    <source srcset={aboveMobileImageUrl} media="(min-width: 600px)" />
    <img
      src={mobileImageUrl}
      alt="Graph boxes for more traffic leads and sales"
      title="More Traffic Leads And Sales"
    />
  </picture>
  <InternalNavButton
    type="teal"
    title="Schedule a Nerd Chat"
    slug="/"
    width={290}>Schedule a Nerd Chat</InternalNavButton
  >
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";

  .container {
    padding: 80px 0 0 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    justify-items: center;
    gap: 60px;
    width: 100%;

    @include aboveMobile {
      padding: 120px 0 0 0;
    }
  }

  .content-container {
    padding: 0 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: start;

    & p {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--font-color-light);
    }

    @include aboveMobile {
      width: 660px;
    }

    @include aboveTablet {
      width: 900px;
    }
  }

  p {
  }

  picture {
    width: 100%;
    max-width: 1200px;

    @include aboveMobile {
      transform: translate(-40px, 0);
    }
  }

  img {
    width: 100%;
  }
</style>
