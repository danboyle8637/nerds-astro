---
import Headline from "./Headline.astro";

const paragraphs = [
  "Over 80% of website traffic starts on people's phone. Your website better look good and load FAST.",
  "Especially when the network connection is spotty.",
  "And it better sell on a small screen where space is severely limited.",
]
---

<div class="container">
  <Headline />
  <div class="paragraph-container">
    {paragraphs.map(paragraph => <p>{paragraph}</p>)}
  </div>
</div>

<style lang="scss">
  .container {
    padding: 0 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 60px;
    justify-items: center;
    width: 100%;

    @media (min-width: 600px) {
      width: 660px;
    }

    @media (min-width: 960px) {
      width: 800px;
    }
  }

  .paragraph-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 20px;
    justify-items: start;
    width: 100%;
  }
</style>
