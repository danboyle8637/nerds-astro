---
import Headline from "./Headline.astro";

const paragraphs = [
  "Over <strong>80% of website traffic starts on people's phone</strong>. Your website better look good and load FAST.",
  "Especially when the network connection is spotty.",
  "And it better <strong>sell on a small screen</strong> where space is severely limited.",
];
---

<div class="container">
  <Headline />
  <div class="paragraph-container">
    {paragraphs.map((paragraph) => <p set:html={paragraph} />)}
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";

  .container {
    padding: 0 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 60px;
    justify-items: center;
    width: 100%;
  }

  .paragraph-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 20px;
    justify-items: start;
    width: 100%;

    @include aboveMobile {
      width: 660px;
    }

    @include aboveTablet {
      width: 800px;
    }
  }
</style>
