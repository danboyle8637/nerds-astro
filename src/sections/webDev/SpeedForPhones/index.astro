---
import Headline from "./Headline.astro";
import CopyBlock from "./CopyBlock.astro";
import Images from "./Images.astro";
---

<div class="container">
  <Headline />
  <CopyBlock />
  <Images />
</div>

<style lang="scss">
  .container {
    padding: 80px 0 0 0;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: center;
    width: 100%;
  }
</style>