---
interface Props {
  headline: string
}

const { headline } = Astro.props
---

<div class="container">
  <h1>{headline}</h1>
  <div class="galaxy-pink"></div>
  <div class="galaxy-purple"></div>
</div>

<style lang="sccs">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--background-color-dark);
    width: 100%;
    height: 200px;
    box-shadow: 0 4px 18px 1px hsla(0, 0%, 0%, 0.4);
    overflow: hidden;
    isolation: isolate;
  }

  h1 {
    font-size: 4rem;
    color: hsla(219, 34%, 15%, 1);
  }

  .galaxy-pink {
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: var(--accent-pink);
    border-radius: 50%;
    width: 180px;
    height: 180px;
    filter: blur(200px);
    transform: translate(-200px, 0);
    z-index: 1;

    @media (min-width: 600px) {
      transform: translate(-140px, -40%);
    }

    @media (min-width: 1100px) {
      transform: translate(0, 80px);
    }
  }

  .galaxy-purple {
    @media (min-width: 600px) {
      position: absolute;
      right: 0;
      bottom: 0;
      background-color: var(--accent-purple);
      border-radius: 50%;
      width: 180px;
      height: 180px;
      filter: blur(200px);
      transform: translate(200px, 0);
      z-index: 1;
    }

    @media (min-width: 1100px) {
      transform: translate(0, 80px);
    }
  }
</style>