---
import CopywritingCard from '../../../components/cards/CopywritingCard/index.astro'
import { copyAndContentServices } from '../../../data/callToActions'

const styles = {
  "--card-content-background-color": "#161427",
}
---

<div class="container" style={styles}>
  {copyAndContentServices.map(card => {
    const { id, imageUrl, altTag, titleTag, headline, description, buttonLabel, buttonTitle, slug } = card

    return (
      <CopywritingCard 
        id={id}
        imageUrl={imageUrl}
        altTag={altTag}
        titleTag={titleTag}
        headline={headline}
        description={description}
        buttonLabel={buttonLabel}
        buttonTitle={buttonTitle}
        slug={slug} 
      />
    )
  })}
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 200px;
    justify-items: center;
    width: 100%;

    @include aboveMobile {
      grid-template-columns: 1fr 1fr;
      column-gap: 20px;
      row-gap: 200px;
    }

    @include aboveTablet {
      width: 800px
    }
  }
</style>