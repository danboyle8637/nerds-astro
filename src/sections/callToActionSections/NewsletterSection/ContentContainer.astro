---
const paragraphs: string[] = [
  "Every week I choose the best marketing... design... coding... and tech link I found from the internet. I'll share the link and a short synopsis so you know if you want to check it out.",
  "<strong>Enter your email address below</strong>. You can unsubscribe whenever you want.",
];
---

<div class="container">
  <h2 class="headline">4 Links Letter:</h2>
  <div class="paragraph-container">
    {paragraphs.map((paragraph) => <p set:html={paragraph} />)}
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    @include baseColGrid;
    gap: 40px;
    justify-items: start;
    width: 100%;

    @include aboveTablet {
      width: 800px;
    }
  }

  .headline {
    @include aboveMobile {
      font-size: 6rem;
    }
  }

  .paragraph-container {
    @include baseColGrid;
    gap: 30px;
    width: 100%;
  }
</style>
