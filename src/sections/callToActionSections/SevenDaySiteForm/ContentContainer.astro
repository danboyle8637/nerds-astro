---
import Headline from "../Headline.astro";
import BaseBullet from "../../../components/typography/BaseBullet.astro";
import TerminalHeader from '../../../components/typography/TerminalHeader.astro'

const bullets: string[] = [
  "This is a productize service.",
  "<strong>Its also a partnership</strong>.",
  "I expect you to use this site to grow your business."
]
---

<div class="container">
  <Headline />
  <div class="content-container">
    {bullets.map(bullet => <BaseBullet><span set:html={bullet} /></BaseBullet>)}
    <div class="pricing-container">
      <p>Pricing Starts At:</p>
      <TerminalHeader cursor={true}>
        <p>$1800</p>
      </TerminalHeader>
    </div>
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
      @include baseColGrid;
      gap: 80px;
      justify-items: center;
      width: 100%;

      @include aboveMobile {
        width: 660px;
      }

      @include aboveTablet {
        width: 860px;
      }
  }

  .content-container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 60px;
    width: 100%;

    @include aboveMobile {
      width: 560px;
    }

    @include aboveTablet {
      gap: 80px;
      width: 800px;
    }
  }

  .pricing-container {
    justify-self: center;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    width: max-content;

    @include aboveIphone11 {
      gap: 20px;
    }

    & p {
      font-size: 2rem;

      @include aboveIphone11 {
        font-size: 2.4rem;
      }

      @include aboveMobile {
        font-size: 4rem;
      }
  
      @include aboveTablet {
        font-size: 6rem;
      }
    }
  }
</style>