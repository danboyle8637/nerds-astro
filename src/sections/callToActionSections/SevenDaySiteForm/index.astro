---
import ContentContainer from "./ContentContainer.astro";
import {SevenDaySiteForm} from '../../../components/solid/forms/SevenDaySiteForm'
import TopRightAccent from "../../../components/accents/TopRightAccent.astro";

const chatImage = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/nerd-chat-bubbles_QwS4ErsbU.png?ik-sdk-version=javascript-1.4.3"
---

<div class="container">
  <TopRightAccent backgroundType="header" />
  <div class="galaxy" />
  <img class="nerd-chat" src={chatImage} alt="Book a FREE Nerd Chat" title="Button a Free Nerd Chat">
  <div class="content-container">
    <ContentContainer />
    <SevenDaySiteForm client:visible />
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    position: relative;
    padding-top: 180px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--background-color-dark);
    width: 100%;
    isolation: isolate;

    @include aboveMobile {
      padding-top: 240px;
    }

    @include aboveTablet {
      padding-top: 280px;
    }
  }

  .content-container {
    padding: 0 12px 80px 12px;
    @include baseColGrid;
    gap: 60px;
    justify-items: center;
    width: 100%;
  }

  .nerd-chat {
    position: absolute;
    top: -60px;
    left: 50%;
    width: 320px;
    transform: translate(-50%, 0);

    @include aboveMobile {
      width: 400px;
    }

    @include aboveTablet {
      width: 480px;
    }
  }

  .galaxy {
    position: absolute;
    bottom: -100px;
    left: 0;
    background-color: var(--accent-purple);
    border-radius: 50%;
    width: 220px;
    height: 220px;
    filter: blur(160px);
    transform: translate(-180px, 100px);

		@include aboveMobile {
			transform: translate(-120px, 20px);
		}

    @include aboveTablet {
      transform: translate(-220px, 20px);
    }

		@include aboveTablet {
			transform: translate(-220px, -60px);
		}
  }
</style>