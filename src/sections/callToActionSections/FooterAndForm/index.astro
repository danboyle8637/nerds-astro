---
import ContentContainer from "./ContentContainer.astro";
import { LeadForm } from "../../../components/solid/forms/LeadForm";

const chatImage = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/nerd-chat-bubbles_ZtsPwBKOE.png?ik-sdk-version=javascript-1.4.3"
---

<div class="container">
  <img src={chatImage} alt="Book a FREE Nerd Chat" title="Button a Free Nerd Chat">
  <div class="content-container">
    <ContentContainer />
    <LeadForm client:visible />
  </div>
</div>

<style lang="scss">
  .container {
    position: relative;
    padding-top: 180px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--background-color-dark);
    width: 100%;

    @media (min-width: 600px) {
      padding-top: 240px;
    }

    @media (min-width: 960px) {
      padding-top: 280px;
    }
  }

  .content-container {
    padding: 0 12px 80px 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 60px;
    justify-items: center;
    width: 100%;
  }

  img {
    position: absolute;
    top: -60px;
    left: 50%;
    width: 320px;
    transform: translate(-50%, 0);

    @media (min-width: 600px) {
      width: 400px;
    }

    @media (min-width: 960px) {
      width: 480px;
    }
  }
</style>