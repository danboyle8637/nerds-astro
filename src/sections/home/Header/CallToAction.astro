---
import InternalNavButton from "../../../components/buttons/InternalNavButton.astro";
---

<div>
  <h1>
    <span>From</span>
    <span>Your</span>
    <span>Website</span>
  </h1>
  <InternalNavButton 
    type="teal" 
    slug="/" 
    width={290} 
    title="">Talk To A Nerd</InternalNavButton>
</div>

<style>
  div {
    grid-column: 1 / -1;
    grid-row: 1 / -1;
    align-self: end;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 20px;
    justify-items: end;
    width: 100%;
    transform: translate(-12px, -50px);
    z-index: 1;
  }

  h1 {
    display: flex;
    flex-direction: column;
    text-align: right;
    line-height: 1.2;
  }

  span {
    font-size: 4rem;
    color: #f8f8f8;
    text-transform: uppercase;
  }
</style>