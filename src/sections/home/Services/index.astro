---
import TerminalHeader from "../../../components/typography/TerminalHeader.astro";
import CardsContainer from "./CardsContainer.astro";
---

<div class="container">
  <div class="header">
    <TerminalHeader cursor={true}>
      <h3>~ Services</h3>
    </TerminalHeader>
  </div>
  <CardsContainer />
</div>

<style lang="scss">
  .container {
    padding: 80px 12px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 90px;
    justify-items: center;
    width: 100%;
    max-width: 1000px;
  }

  .header {
    width: 100%;
    max-width: 600px;
  }

  h3 {
    text-transform: uppercase;
    @media (min-width: 600px) {
      font-size: 6rem;
    }
  }
</style>

