---
const paragraphs: string[] = [
  "We blog about our experience marketing... designing... coding... and reviewing the cool tech and software we use on a daily basis.",
  "<strong>Click on a blog card</strong> to read the posts from that category.",
];
---

<div class="container">
  <h2 class="headline">Read The Nerd Blogs:</h2>
  <div class="paragraph-container">
    {paragraphs.map((paragraph) => <p set:html={paragraph} />)}
  </div>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    @include baseColGrid;
    gap: 40px;
    justify-items: start;
    width: 100%;

    @include aboveMobile {
    }

    @include aboveTablet {
      width: 800px;
    }
  }

  .headline {
    @include aboveMobile {
      font-size: 6rem;
    }
  }

  .paragraph-container {
    @include baseColGrid;
    gap: 30px;
    width: 100%;
  }
</style>
