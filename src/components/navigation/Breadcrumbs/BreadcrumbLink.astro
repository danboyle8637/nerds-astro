---
interface Props {
  path: string
}

const { path } = Astro.props
---

<a href={`${path}`} title={path}>
  <slot />
</a>

<style lang="scss">
  @import "../../../styles/sizes.scss";

  .constainer {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    width: fit-content;
  }

  a {
    padding: 4px 22px;
    position: relative;
    font-size: 1.4rem;
    font-weight: 600;
    background-color: hsla(218, 32%, 10%, 0.4);
    border: 2px solid var(--background-color-dark);
    border-radius: 8px;

    &::before {
      position: absolute;
      top: 50%;
      left: 0;
      content: "";
      background-color: var(--accent-teal);
      border-radius: 60px;
      width: 3px;
      height: 60%;
      transform: translate(-16px, -50%) rotate(-30deg);
    }
  }
</style>
