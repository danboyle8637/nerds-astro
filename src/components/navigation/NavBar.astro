---
import Logo from "./Logo.astro";
import HeaderNav from "./HeaderNav.astro";

---

<div class="container">
  <div class="nav-container">
    <Logo />
    <HeaderNav />
  </div>
</div>

<style lang="scss">
  @import "../../styles/sizes.scss";
  
  .container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    width: 100%;
    z-index: 500;
  }

  .nav-container {
    padding: 8px 12px 0 12px;
    display: grid;
    grid-template-columns: 110px 1fr;
    justify-items: end;
    align-items: center;
    width: 100%;
    max-width: 1400px;
  }
</style>