---
interface Props {
  showTwoCols?: boolean;
}

const { showTwoCols } = Astro.props;

const templateColumns = showTwoCols ? "1fr 1fr" : "1fr";
---

<div class="container">
  <span>-----</span>
  <ul class="list">
    <slot />
  </ul>
  <span>-----</span>
</div>

<style lang="scss" define:vars={{ templateColumns }}>
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .container {
    padding-bottom: 40px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: center;
    width: 100%;
  }

  .list {
    padding: 0 0 0 20px;
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    gap: 40px;
    justify-items: start;

    @include aboveMobile {
      grid-template-columns: var(--templateColumns);
      column-gap: 20px;
      row-gap: 40px;
    }
  }

  span {
    font-size: 3rem;
    color: #bfa9ff;
  }
</style>
