---
import type { FooterLinkType } from '../../types/components'

interface Props {
  linkType: FooterLinkType
  slug: string
}

const { linkType, slug } = Astro.props

const styles = {
  "--link-font-size": linkType === "admin" ? "2.4rem" : "2.4rem",
}
---

<li style={styles}>
  <a href={slug}>
  <slot />
  </a>
</li>

<style lang="scss">
  @import "../../styles/sizes.scss";

  li {
    overflow: hidden;
    width: 100%;
  }

  a {
    position: relative;
    font-size: 2.4rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--font-color-light);
    cursor: pointer;
    outline: none;
    transition: color 300ms ease-in-out;
    isolation: isolate;

    &:hover {
      color: var(--accent-teal);
    }

    &:active {
      color: var(--font-color-light);
    }

    &:visited {
      color: var(--font-color-light);
    }

    &:visited:hover {
      color: var(--accent-teal);
    }

    &::before {
      position: absolute;
      left: 0;
      bottom: -4px;
      content: "";
      background-color: var(--accent-pink);
      width: 100%;
      height: 3px;
      transform: translateX(-102%);
      transition: transform 300ms ease-in-out;
    }

    &:hover::before {
      transform: translateX(0%);
    }

    &:focus {
      color: var(--accent-teal);
    }

    &:focus::before {
      transform: translateX(0%);
    }

    @include aboveMobile {
      font-size: 2.4rem;
    }
  }
</style>