---
interface Props {
  headline: string;
  paragraphs: string[];
}

const { headline, paragraphs } = Astro.props;
---

<div class="container">
  <h1 class="headline">{headline}</h1>
  <div class="paragraph-container">
    {paragraphs.map((paragraph) => <p set:html={paragraph} />)}
  </div>
</div>

<style lang="scss">
  @import "../../styles/sizes.scss";
  @import "../../styles/layout.scss";

  .container {
    @include baseColGrid;
    gap: 40px;
    justify-items: start;
    width: 100%;
  }

  .headline {
    @include aboveTablet {
      font-size: 4.6rem;
    }
  }

  .paragraph-container {
    @include baseColGrid;
    gap: 30px;
    justify-items: start;
    width: 100%;
  }
</style>
