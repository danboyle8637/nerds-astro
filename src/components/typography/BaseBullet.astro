---
const checkImage = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/radio-focus_UiuHs8It6.png?ik-sdk-version=javascript-1.4.3"
---

<li>
  <img src={checkImage} alt="Bullet point" title="Important Bullet Point">
  <slot />
</li>

<style lang="scss">
  li {
    display: grid;
    grid-template-columns: min-content 1fr;
    gap: 12px;
    justify-items: start;
    align-items: start;
    font-size: 2.1rem;
    font-weight: 700;
    line-height: 1.6;
    color: var(--font-color-light);
    width: 100%;

    @media (min-width: 960px) {
      font-size: 2.6rem;
    }
  }

  img {
    width: 40px;
  }
</style>