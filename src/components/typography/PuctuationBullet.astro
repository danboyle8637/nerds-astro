---
interface Props {
  type: "question" | "exclaimation"
}

const { type } = Astro.props

const questionImage = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/question-bullet_mPB-OZdzy.png?ik-sdk-version=javascript-1.4.3"
const exclaimationImage = "https://ik.imagekit.io/csu76xuqqlwj/nerds-who-sell/site-assets/exclaimation-bullet_6hT7S6T9g.png?ik-sdk-version=javascript-1.4.3"
---

<li>
  <img class="bullet" src={type === "question" ? questionImage : exclaimationImage} alt="Check" title="Important Question">
  <slot />
</li>

<style lang="scss">
  li {
    display: grid;
    grid-template-columns: min-content 1fr;
    gap: 12px;
    justify-items: start;
    align-items: start;
    font-size: 2.1rem;
    font-weight: 700;
    line-height: 1.6;
    color: var(--font-color-light);
    width: 100%;

    @media (min-width: 960px) {
      font-size: 2.6rem;
    }
  }

  .bullet {
    width: 60px;
  }
</style>