---
import type { CalendarDayType, ActiveMonth, CalendarDayStatus } from '../../../types/calendar'

export interface Props {
  type: CalendarDayType;
  id: number;
  label: number;
  isToday: boolean;
  dayOfWeek: number;
  activeDay: number;
  status: CalendarDayStatus;
  activeMonth: number;
  currentMonth: number;
  year: number;
  isBuildDay: boolean
}

const { type, id, label, isToday, dayOfWeek, activeDay, status, activeMonth, currentMonth, year, isBuildDay } = Astro.props as Props

const styles = {
  "--day-background": isToday && isBuildDay ? "var(--accent-teal)" : isBuildDay ? "var(--accent-pink)" : "hsla(218, 29%, 23%, 0.4)",
  "--day-blur": isToday || isBuildDay ? "blur(0)": "blur(2px)",
  "--day-transform": isToday ? "translate(20px, -12px) scale(1.4)" : isBuildDay && !isToday ? "translate(12px, -8px) scale(1.05)" : "none",
  "--day-z-index": isToday ? 2 : isBuildDay && !isToday ? 1 : "unset",
}
---

<div style={styles}>
  <p>{label}</p>
</div>

<style>
  div {
    position: relative;
    padding: 6px;
    padding-top: 100%;
    background-color: var(--day-background);
    border-radius: 10px;
    border: none;
    width: 100%;
    opacity: var(--day-opacity, 1);
    box-shadow: 0 4px 2px 0px rgba(0, 0, 0, 0.4), 0 0 0 2px var(--dark-3),
      var(--day-shadow);
    filter: var(--day-blur);
    transform: var(--day-transform, none);
    transition: box-shadow, background-color, 300ms ease-in-out;
    z-index: var(--day-z-index, unset);
  }

  div:hover {
    box-shadow: 0 4px 2px 0px rgba(0, 0, 0, 0.4), 0 0 0 2px var(--dark-3),
      var(--day-shadow);
  }

  p {
    position: absolute;
    top: 4px;
    left: 16px;
    font-size: 1.4rem;
    font-weight: 500;
    color: var(--label-color, hsla(216, 27%, 13%));
    text-shadow: -8px 3px 2px hsla(0, 0%, 0%, 0.2);
  }
</style>