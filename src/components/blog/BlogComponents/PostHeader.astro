---
import { sanity } from '../../../pages/blog/marketing/index.astro'
import imageUrlBuilder from '@sanity/image-url'
import PostMeta from './PostMeta.astro'
import TopRightAccent from '../../accents/TopRightAccent.astro'
import type { SanityImage, PostTag } from '../../../types/blog'

interface Props {
  imageUrl: SanityImage
  altTag: string
  titleTag: string
  headline: string
  category: string
  tags: PostTag[] 
}

const {
  imageUrl,
  altTag,
  titleTag,
  headline,
  category,
  tags,
} = Astro.props

const builder = imageUrlBuilder(sanity)

function urlFor(source: SanityImage) {
  return builder.image(source)
}

const postHeaderImage = urlFor(imageUrl).width(800).auto("format").url()
---

<div class="container">
  <div class="post-header">
    <div class="post-image">
      <img src={postHeaderImage} alt={altTag} title={titleTag} />
    </div>
    <TopRightAccent backgroundType="footer" />
  </div>
  <PostMeta category={category} tags={tags} />
  <h1>{headline}</h1>
</div>

<style lang="scss">
  @import "../../../styles/sizes.scss";
  @import "../../../styles/layout.scss";

  .container {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: min-content;
    justify-items: center;
    gap: 40px;
    width: 100%;
  }

  .post-header {
    position: relative;
    padding-top: 100px;
    display: flex;
    justify-content: center;
    background-color: var(--footer-background);
    width: 100%;
    box-shadow: 0 0 0 8px hsla(0, 0%, 0%, 0.4);
    isolation: isolate;

    @include aboveMobile {
      padding-top: 60px;
    }
  }

  .post-image {
    width: 100%;

    @include aboveMobile {
      width: 600px;
    }

    @include aboveTablet {
      width: 780px;
    }
  }

  h1 {
    padding: 0 12px;
    font-size: 4.4rem;

    @include aboveIphone11 {
      font-size: 4.8rem;
    }

    @include aboveMobile {
      padding: 0 26px;
      font-size: 6rem;
    }

    @include aboveTablet {
      padding: 0;
      font-size: 7rem;
      width: 900px;
    }

    @include aboveIpadPro {
      width: 1000px;
    }
  }
</style>